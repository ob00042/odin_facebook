<!DOCTYPE html>
<html>
  <head>
    <title>OdinFacebook</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <header>
      <% if user_signed_in? %>
        <p>Signed in as <%= link_to current_user.name, current_user %>. <%= link_to "Sign out", destroy_user_session_path, method: :delete %></p>
      <% else %>
        <%= link_to "Sign in with Facebook", user_facebook_omniauth_authorize_path %>
        <p><%= link_to "Sing up", new_user_registration_path %>, or <%= link_to "Sign in", new_user_session_path %></p>
      <% end %>

    </header>

  	<p class="notice"><%= notice %></p>
    <p class="alert"><%= alert %></p>

    <%= yield %>
  </body>
</html>
